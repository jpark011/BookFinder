<div class="container">
	<%= form_tag "/courses/search", method: "get", id: "search", class: "form-inline" do %>
		<div class="form-group">
			<%= label_tag :course_name, "Type a course: " %>
			<%= text_field_tag :course_name, nil, class: 'form-control', autocomplete: "off", placeholder: "ex) MATH 101 Section 02", required: "required" %>
			<%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
		</div>
	<% end %>
	
	<div class="panel panel-primary">
		<div class="panel-heading"><strong>Courses</strong></div>
		<% @courses.each do |course| %>
			<div class="panel-body">
				<%= link_to course.subject + ' ' + course.number + ' Section ' + course.section, course_path(course) %>
			</div>
		<% end %> 
	</div>
</div>
